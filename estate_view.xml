<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
    <record id="view_estate_form" model="ir.ui.view">
        <field name="name">estate.form</field>
        <field name="model">estate</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <form string="Propiedades" version="7.0">
            <header>
                <button name="action_estado_alquilado" type="object" states="creando,ventAlquiler,enalquiler,enventa" string="Alquilado" confirm="¿Confirma marcar como alquilado?" class="oe_highlight"/>
                <button name="action_estado_vendido" type="object" states="creando,ventAlquiler,enalquiler,enventa" string="Vendido" confirm="¿Confirma marcar como vendido?" class="oe_highlight"/>
                <button name="action_estado_enAlquiler" type="object" states="creando,ventAlquiler,alquilado,vendido,enventa" string="Para Alquilar" confirm="¿Confirma marcar para alquilar?"/>
                <button name="action_estado_enVenta" type="object" states="creando,ventAlquiler,alquilado,vendido,enalquiler" string="Para la Venta" confirm="¿Confirma marcar para la venta?"/>
                <button name="action_estado_ventAlquiler" type="object" states="creando,alquilado,vendido,enalquiler,enventa" string="En venta - En alquiler" confirm="¿Confirma marcar para la venta-alquiler?"/>
                <!--
                <button name="action_estado_desactivado" type="object" domain="[('active','=', True)]" string="Desactivar" confirm="¿Confirma marcar como desactivado?"/>
                <button name="action_estado_activar" type="object" domain="[('active','=', False)]" string="Activar" confirm="¿Confirma marcar como activado?"/>
                -->
                <button name="action_invoice_sent" type="object" string="Enviar por Email" class="oe_highlight" />
                <xpath expr="//div[@class='oe_right oe_button_box']" >
                    <button name="button_estate_match" type="object" string="Buscar pedidos" class="oe_highlight"/>
                </xpath>
                <field name="state" widget="statusbar" statusbar_visible="creando,enalquiler,alquilado,enventa,ventAlquiler,vendido" statusbar_colors='{"vendido":"blue"}'/>
            </header>
            <sheet>
                <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                <div class="oe_title">
                    <div>
                        <div >
                            <label for="name" style="color:red" />
                            <field name="is_rural" invisible="1" class="oe_inline"/>
                            <field name="alquiler" invisible="1" class="oe_inline"/>
                        </div>
                    </div>
                    <h1>
                        <field name="name" default_focus="1" placeholder="Descripción de la propiedad, ah si?" />
                    </h1>
                    <group col="2" colspan="4" rowspan="2" >
                        <field name="operacion" style="width: 40%%" />
                        <field name="tipo_propiedad" style="width: 40%%" />
                        <!--field name="price_venta" style="width: 40%%" /-->
                        <field name="precio_cabezal" style="width: 40%%" />
                        <field name="categoria" style="width: 40%%" />
                        <label for="number" style="color:red" />
                        <field name="number" placeholder="Nro. de propiedad" style="width: 43%%" nolabel="1"/>
                        <!--field name="duplicados" placeholder="Duplicados" /-->
                        <field name="destacados" placeholder="Destacados"/>
                        <field name="reservado" placeholder="Destacados"/>
                        <!--field name="partner_id" placeholder="Nombre del cliente..."/> TODO VA A UNA PESTAÑA NUEVA-->
                        <!--field name="category_id" widget="many2many_tags" placeholder="Categorías..." on_change="onchange_categoria(category_id)"/-->
                    </group>
                    <label for="publicado" string="Publicar en la Web" />
                    <field name="publicado" />
                    <field name="score" invisible="1"/>
                    <label for="active" string="Activo" attrs="{'invisible': [('state','=', 'vendido')]}"/>
                    <field name="active" attrs="{'invisible': [('state','=', 'vendido')]}"/>
                    <field name="webUrl" widget="url" attrs="{'invisible': [('publicado','=', False)]}"/>
                    <!--<field name="webProp" widget="url"/>-->

                </div>
                <div attrs="{'invisible': [('is_rural','=', False)]}" align="right" >

                    <a target="_new" href="http://www.prenader.gub.uy/coneat/viewer.htm?Title=CONEAT Digital">www.prenader.gub.uy</a>
                    <br></br>
                    <a target="_new" href="http://www.catastro.gub.uy">www.catastro.gub.uy</a>
                    <br></br>
                    <a target="_new" href="http://www.sapucai.com/campos/">www.sapucai.com</a>
                    <br></br>
                </div>
                <group attrs="{'invisible': [('is_rural','=', False)]}">
                    <group col="8">
                        <field name="padron"  />
                        <field name="mapa"  />
                        <!--<field name="fotos"  />
                        <field name="ImagenesGoogle"  />-->
                        <field name="estudioSuelo" />
                        <!--<field name="distancias" />-->
                        <field name="fotos" />
                        <!--<field name="autWeb"  />-->
                    </group>
                </group>

                <notebook colspan="4">
                <page string="Dirección">
                    <group string="Dirección">
                            <field name="street" placeholder="Calle..." style="width: 60%%" class="oe_webclient" />
                            <field name="numero_de_puerta" placeholder="Nº de puerta" style="width: 60%%"/>
                            <field name="numero_de_apto" placeholder="Unidad" style="width: 60%%"/>
                            <label for="numero_piso" style="color:red" />
                            <field name="numero_piso" placeholder="Piso" style="width: 60%%" nolabel="1"/>
                            <field name="pisos_edi" style="width: 60%%"/>
                            <field name="edificio" placeholder="Edificio..." style="width: 60%%"/>
                            <field name="street2"  placeholder="Esquina..." style="width: 60%%"/>
                            <field name="barrio" placeholder="Zona" attrs="{'invisible': [('is_rural','=', True)]}" style="width: 60%%"/>
                            <!--field name="city" placeholder="Ciudad o Localidad" style="width: 20%%;" /-->
                            <!--ENTONCES NO SE QUE PASA DESPUES DE ACA-->
                            <field name="seccional" placeholder="Seccional" attrs="{'invisible': [('is_rural','=', False)]}" style="width: 60%%"/>
                            <field name="state_id" class="oe_no_button" placeholder="Departamento" style="width: 20%%;" options='{"no_open": True}' on_change="onchange_state(state_id)"/>
                            <field name="pais_id" placeholder="País" class="oe_no_button" options='{"no_open": True}' style="width: 20%%;"/>
                            <field name="ubicacion" placeholder="Como llegar..." />
                            <field name="googleLocation" placeholder="Localización de Google Maps (Ej. Domingo Pérez 562, Minas, Lavalleja, Uruguay)" style="width: 90%%;"/>
                    </group>
                </page>

                <page string="Metraje" attrs="{'invisible': [('is_rural','=', True)]}">
                    <group col="4">

                        <label for="supEdificada" style="color:red"/>
                        <field name="supEdificada" nolabel="1"/>

                        <label for="supTotal" style="color:red"/>
                        <field name="supTotal" nolabel="1"/>

                        <label for="superficie_terraza" style="color:red"/>
                        <field name="superficie_terraza" nolabel="1"/>

                        <label for="ancho" style="color:red"/>
                        <field name="ancho" nolabel="1"/>

                        <label for="metraje_fondo" style="color:red"/>
                        <field name="metraje_fondo" nolabel="1"/>

                        <label for="largo" style="color:red"/>
                        <field name="largo" nolabel="1"/>

                    </group>
                </page>

                <page string="Descripción General">
                    <group cols="2" colspan="2">
                        <group string="Descripción General" style="color:red" rowspan="1" cols="1" colspan="1">
                            <field name="padron" style="width: 14%%"/>
                            <field name="year" style="width: 14%%"/>
                            <field name="orientacion" style="width: 14%%"/>
                            <field name="tipo_inmueble_id" style="width: 50%%"/>
                            <!--field name="penthouse_category" style="width: 25%%"/-->
                            <!--field name="plantas_category" style="width: 25%%"/-->
                            <field name="select_ubicacion" style="width: 50%%"/>
                            <field name="select_estado" style="width: 50%%"/>
                        </group>
                        <group string="Área Social" style="color:red" >
                            <field name="living"/>
                            <field name="comedor"/>
                            <field name="liv_com"/>
                            <field name="estar"/>
                            <field name="escritorio"/>
                            <field name="hall"/>
                            <field name="recibo"/>
                            <field name="despojador"/>
                            <field name="hogar"/>
                        </group>
                        <group string="Ambientes/Dormitorios" style="color:red">
                            <field name="cantidadDormitorios" style="width: 14%%"/>
                            <field name="nAmbientes" style="width: 14%%"/>
                            <field name="suite" style="width: 14%%"/>
                            <field name="DormitorioPlacard" style="width: 14%%"/>
                            <field name="DormitorioServicio" style="width: 25%%"/>
                        </group>
                        <group string="Baños" style="color:red" >
                            <field name="cantidadBanios" style="width: 14%%"/>
                            <field name="toilet" style="width: 14%%"/>
                            <field name="bath" style="width: 14%%"/>
                            <field name="hidro" style="width: 25%%"/>
                        </group>
                        <group string="Cocina" style="color:red" >
                            <field name="cocina"/>
                            <!--field name="office_cocina"/-->
                            <field name="kit"/>
                            <field name="comedor_diario"/>
                            <!--field name="diario_diario"/-->
                        </group>
                        <group string="Exterior" style="color:red" >
                            <field name="terraza"/>
                            <field name="balcon"/>
                            <field name="terraza_2"/>
                            <field name="lavadero"/>
                            <field name="azotea"/>
                            <field name="patio"/>
                            <field name="fondo"/>
                            <field name="jardin"/>
                            <field name="parrillero"/>
                            <field name="bbq"/>
                            <!--field name="deposito"/-->
                        </group>
                        <group string="Garage" style="color:red" >
                            <group>
                                <field name="garage" style="width: 1%%"/>
                                <field name="cochera" style="width: 1%%"/>
                            </group>
                            <group>
                                <field name="autos2"/>
                                <field name="autos" style="width: 1%%"/>
                            </group>
                            </group>
                            <group style="color:red">
                                <field name="box"/>
                            </group>
                        <group string="Calefacción y servicios accesorios" style="color:red">
                            <field name="calefaccion" style="width: 50%%"/>
                            <field name="ac"/>
                            <field name="gas"/>
                            <field name="telefono"/>
                            <field name="cable"/>
                            <field name="internet"/>
                            <field name="alarma"/>
                        </group>
                        <group string="Equipamiento" style="color:red">
                            <field name="amueblado"/>
                            <field name="linea_blanca"/>
                        </group>
                        <group string="Amenities" style="color:red">
                            <field name="piscinalibre"/>
                            <field name="piscinacubierta"/>
                            <field name="sauna"/>
                            <field name="sala_juegos"/>
                            <field name="gym"/>
                            <field name="canchas"/>
                            <field name="parrillero2"/>
                            <field name="bbq2"/>
                            <field name="solarium"/>
                            <!--field name="salon_comunal"/-->
                        </group>
                        <group string="Comodidades del edificio" style="color:red" >
                            <field name="ascensor"/>
                            <field name="porteria" style="width: 14%%"/>
                            <field name="porteria_2" style="width: 14%%"/>
                            <field name="lavanderia" style="width: 14%%"/>
                            <field name="vigilancia" style="width: 25%%"/>
                        </group>
                        <group string="Comentarios" style="color:red" >
                            <field name="comentarios"/>
                        </group>
                    </group>
                </page>
                <page string="Precio" >
                    <group  attrs="{ 'invisible' : [ ( 'state', 'in', [ 'enalquiler'] ) ] }" >
                        <h3>
                            <label for="currency_venta" style="color:red"/>
                            <field name="currency_venta" class="oe_inline"  style="width: 17%%" domain="['|',( 'name','=','USD' ),( 'name','=','UYP' )]" nolabel="1" />
                            <label for="price_venta"  style="color:red" />
                            <field name="price_venta" class="oe_inline" widget='monetary' nolabel="1"  />
                        </h3>
                    </group>
                    <group attrs="{ 'invisible' : [ ( 'state', 'in', [ 'enventa' ] ) ] }" >
                        <h3>
                            <label for="currency_alquiler" style="color:red"/>
                            <field name="currency_alquiler" class="oe_inline"  style="width: 7%%" domain="['|',( 'name','=','USD' ),( 'name','=','UYP' )]" nolabel="1" />
                            <label for="price_alquiler" style="color:red;width: 7%%" />
                            <field name="price_alquiler" class="oe_inline" widget='monetary' nolabel="1" />
                        </h3>
                    </group>
                    <group>
                        <field name="gastos_comun" style="width: 7%%"/>
                        <field name="contri"/>
                        <field name="impuestoprimaria"/>
                    </group>
                    <group string="Condiciones">
                        <field name="conditions" nolabel="1"/>
                    </group>
                     <group string="Observaciones">
                        <field name="precio_obs" nolabel="1"/>
                    </group>
                    <group>
                        <field name="financiacion"/>
                    </group>
                </page>
                <page string="Propietario" >
                    <group string="Datos del Propietario">
                        <field name="partner_id" style="width: 40%%"/>
                    </group>
                </page>
                <page string="Histórico">
                    <group col="4" colspan="2">
                        <field name="date" placeholder="Fecha de ingreso" />
                        <field name="write_date" style="width: 60%%"/>
                        <field name="ingresado_por" style="width: 60%%" placeholder="Selecione el usuario" />
                        <field name="create_uid" style="width: 60%%"/>
                        <field name="write_uid" style="width: 60%%"/>
                        <field name="fechaContacto" placeholder="Fecha de Contacto" />
                    </group>
                     <group string="Observaciones">
                        <field name="message_obs" nolabel="1"/>
                    </group>
                    <field name="message_ids" colspan="4" nolabel="1" mode="tree" readonly="1">
                        <tree string="Historia">
                            <field name="display_text" string="Informacion Historica"/>
                            <field name="email_from" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <page string="Archivos adjuntos" >
                    <field name="attachments" colspan="4" nolabel="1" mode="tree" editable="bottom">
                        <tree string="Archivos" toolbar="0" create="0" delete="0" editable="bottom">
                           <field name="image" widget='image' class="oe_left oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                            <field name="name" />
                            <field name="type" attrs="{'readonly': True}" />
                            <field name="web" />
                            <field name="email" string="EMail-Ficha"/>
                            <field name="satelital" />
                            <field name="sequence" />
                        </tree>
                    </field>
                </page>
                <page string="Clientes interesados" >
                    <group>
                        <field name="atendido_por" style="width: 30%%"/>
                    </group>
                    <field name="users_ids" >
                        <tree string="Nombre">
                            <field name="name" />
                            <field name="phone" />
                            <field name="mobile" />
                        </tree>
                    </field>
                </page>
                 <page string="Compartido a Colegas">
                    <field name="compartidocolegas_ids" widget='one2many' mode="tree" >
                        <tree string="Clientes interesados" editable="bottom" >
                            <field name="inm" />
                            <field name="cliente_id" />
                            <field name="telefono"/>
                            <field name="mail"/>
                        </tree>
                    </field>
                </page>
                <page string="Visitas" >
                    <field name="visit_ids" colspan="4" nolabel="1" mode="tree" >
                        <tree string="Visitas" editable="bottom">
                            <field name="date" />
                            <field name="partner_id" />
                            <field name="notes" />
                        </tree>
                    </field>
                </page>
                <page string="Documentación">
                    <group string="Observaciones">
                        <field name="obs_documentacion" nolabel="1"/>
                    </group>
                </page>
                <page string="Tasación">
                    <group>
                        <field name="fecha_tasacion" nolabel="0" style="width: 17%%" />
                        <field name="moneda_tasacion" nolabel="0" style="width: 17%%" domain="['|',( 'name','=','USD' ),( 'name','=','UYP' )]"/>
                        <field name="importe_tasacion" nolabel="0" style="width: 15%% " />
                        <field name="tasado_por" nolabel="0" style="width: 20%% " />
                    </group>
                    <group string="Observaciones">
                        <field name="obs_tasacion" nolabel="1"/>
                    </group>
                </page>
                <page string="Alquiler por temporada" attrs="{ 'invisible' : [ ( 'state', 'in', [ 'enventa' ] ) ] }" >
                    <field name="temporada_ids" widget="one2many_list" mode="tree">
                        <tree string="Alquiler por temporada" editable="bottom">
                            <field name="cliente_1"/>
                            <field name="usuario_1"/>
                            <field name="currency_al" domain="['|',( 'name','=','USD' ),( 'name','=','UYP' )]" />
                            <field name="fecha_inicio" on_change="get_number_of_days(fecha_inicio,fecha_fin, rent_day)" />
                            <field name="fecha_fin" on_change="get_number_of_days(fecha_inicio,fecha_fin, rent_day)" />
                            <field name="rent_day"/>
                            <field name="rent_price"/>
                            <field name="result"/>
                            <field name="costo_alquiler"/>
                            <field name="pago_1"/>
                        </tree>
                    </field>
                </page>
                <page string="Personas relacionadas" >
                    <field name="personas_ids" >
                        <tree string="Nombre">
                            <field name="name" />
                            <field name="category_id" />
                        </tree>
                    </field>
                </page>

                <page string="Comodidades" attrs="{'invisible': [('is_rural','=', False)]}">
                    <group col="4" >
                        <label for="casaPrincipal" style="color:red" />
                        <field name="casaPrincipal" nolabel="1" />
                        <label for="casaPersonal" style="color:red" />
                        <field name="casaPersonal" nolabel="1" />
                        <label for="luz" style="color:red" />
                        <field name="luz" nolabel="1" />
                        <label for="agua" style="color:red" />
                        <field name="agua" nolabel="1" />
                        <label for="galpones" style="color:red" />
                        <field name="galpones" nolabel="1" />
                        <label for="embarcadero" style="color:red" />
                        <field name="embarcadero" nolabel="1" />
                        <field name="banio" />
                        <field name="vacunos"  />
                        <field name="lanares"  />
                        <label for="piquetes" style="color:red" />
                        <field name="piquetes" nolabel="1" />
                        <label for="potreros" style="color:red" />
                        <field name="potreros" nolabel="1" />
                        <label for="tubo" style="color:red" />
                        <field name="tubo" nolabel="1" />
                        <label for="cepo" style="color:red" />
                        <field name="cepo" nolabel="1" />
                        <label for="otras" style="color:red" />
                        <field name="otras" nolabel="1" />
                    </group>
                </page>

                <page string="Mejoras" attrs="{'invisible': [('is_rural','=', False)]}">
                    <group col="4" >
                        <label for="mejoras" style="color:red" />
                        <field name="mejoras" nolabel="1" />
                        <label for="alambrados" style="color:red" />
                        <field name="alambrados" nolabel="1" />
                        <label for="aguadas" style="color:red" />
                        <field name="aguadas" nolabel="1" />
                        <label for="tajamares" style="color:red" />
                        <field name="tajamares" nolabel="1" />
                        <field name="centros" />
                    </group>
                </page>

                <page string="Encargado" attrs="{'invisible': [('is_rural','=', False)]}">
                    <group col="4">
                        <field name="encargado" string="Nombre" />
                        <field name="encargadoCelular" />
                    </group>
                </page>

                <page string="Contribuciones" attrs="{'invisible': [('is_rural','=', False)]}">
                    <group col="4">
                        <field name="contInm"  />
                        <field name="impPrim" />
                        <field name="bps"  />
                        <field name="bhu" />
                        <field name="deudas" />
                        <field name="suc"  />
                        <field name="planos"  />
                    </group>
                </page>

                <page string="Observaciones">
                    <field name="observations_ids" widget='one2many' mode="tree" >
                        <tree string="Observaciónes" editable="bottom" >
                            <field name="notes" />
                            <field name="observador"/>
                            <field name="obs_date"/>
                        </tree>
                    </field>
                </page>

                <page string="Gastos">
                    <field name="expenses_ids" widget='one2many' mode="tree" >
                        <tree string="Gastos" editable="bottom">
                                <field name="notes" />
                                <field name="currency" style="width: 17%%" domain="['|',( 'name','=','USD' ),( 'name','=','UYP' )]"/>
                                <field name="price" style="width: 17%%"/>
                        </tree>
                    </field>
                </page>

                <page string="CONEAT" attrs="{'invisible': [('is_rural','=', False)]}">
                    <group>
                        <field name="suelosConeat" />
                    </group>
                 </page>



                 <!--page string="Clientes interesados a">
                    <field name="interesados_ids" widget='one2many' mode="tree" >
                        <tree string="Clientes interesados" editable="bottom" >
                            <field name="atendido_por" />
                            <field name="cliente_id" />
                            <field name="telefono"/>
                        </tree>
                    </field>
                </page-->

                <!--page string="Compartido" >
                    <field name="colegas_ids" >
                        <tree string="Nombre">
                            <field name="name" />
                            <field name="phone" />
                            <field name="mobile" />
                            <field name="street" />
                            <field name="website" />
                        </tree>
                    </field>
                </page-->






                <page string="EMails" >
                    <field name="emails" readonly="1" >
                        <form string="EMail" version="7.0">
                            <group>
                                <field name="date" />
                                <field name="author_id" />
                                <label for="partner_ids" string="Destinatarios"/>
                                <div groups="base.group_user">
                                    <field name="partner_ids" widget="many2many_tags_email" />
                                </div>
                                <field name="subject" placeholder="Subject..."/>
                            </group>
                            <field name="body" style="border: 1pt solid #cccccc;" />
                        </form>
                        <tree string="EMails" create="false" delete="false">
                            <field name="author_id" />
                            <field name="partner_ids" />
                            <field name="subject" />
                            <field name="date" />
                        </tree>
                    </field>
                </page>
            </notebook>
            </sheet>
            <label for="texto_rojo" style="color: red; margin-left: 105px;"/>
            <field name="texto_rojo" nolabel="1"/>
            </form>
        </field>
    </record>



    <record id="view_crm_mach" model="ir.ui.view">
        <field name="name">new.tree</field>
        <field name="model">crm.lead</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Pedidos macheables">
                <field name="name"/>
                <field name="number"/>
                <field name="largo"/>
            </tree>
        </field>
    </record>

    <!-- Estate Kanban View -->
    <record model="ir.ui.view" id="estate_kanban_view">
        <field name="name">estate.kanban</field>
        <field name="model">estate</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="is_rural"/>
                <field name="street"/>
                <field name="city"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <field name="category_id"/>
                <field name="has_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override">
                            <a type="open">
                                <t t-if="record.has_image.raw_value === true">
                                    <img t-att-src="kanban_image('estate', 'image_small', record.id.value)" class="oe_kanban_image"/>
                                </t>
                                <t t-if="record.has_image.raw_value === false">
                                    <t t-if="record.is_rural.raw_value === true">
                                        <img t-att-src='_s + "/dtm_inmobiliaria/static/src/img/agritourism-64.png"' class="oe_kanban_image"/>
                                    </t>
                                    <t>
                                        <img t-att-src='_s + "/dtm_inmobiliaria/static/src/img/home-5-64.png"' class="oe_kanban_image"/>
                                    </t>
                                </t>
                            </a>
                            <div class="oe_kanban_details">
                                <h4 class="oe_partner_heading"><a type="open"><field name="name"/></a></h4>
                                <h4 class="oe_partner_heading"><a type="open">N° de Propiedad: <field name="number"/></a></h4>
                                <div class="oe_kanban_partner_categories"/>
                                <div class="oe_kanban_partner_links"/>
                                <ul>
                                    <li><b>Edificio </b><field name="edificio"/></li>
                                    <li><b>Precio: </b><field name="precio_cabezal"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_estate_filter" model="ir.ui.view">
         <field name="name">estate.select</field>
         <field name="model">estate</field>
         <field name="arch" type="xml">
             <search string="Search Estate">
                <field name="number" filter_domain="[('number','ilike',self)]"/>
                <field name="name" filter_domain="['|',('name','ilike',self),('partner_id','ilike',self)]"/>
                <field name="category_id" string="Categoría" filter_domain="[('category_id','ilike', self)]"/>
                <field name="partner_id" filter_domain="[('partner_id','child_of',[self])]"/>
                <field name="state" string="Estado" filter_domain="[('state','ilike', self)]"/>

                <separator/>

                <filter string="En alquiler" name="type_en_alquiler" icon="terp-partner" domain="[('state','=','enalquiler')]"/>
                <filter string="En venta" name="type_en_venta" icon="terp-partner" domain="[('state','=','enventa')]"/>
                <filter string="En venta-alquiler" name="type_en_ventAlquiler" icon="terp-partner" domain="[('state','=','ventAlquiler')]"/>
                <filter string="Alquilados" name="type_alquilado" icon="terp-partner" domain="[('state','=','alquilado')]"/>
                <filter string="Vendidos" name="type_vendido" icon="terp-partner" domain="[('state','=','vendido'),('active','=',False)]"/>
                <filter string="Publicados en la Web" name="type_publicado" icon="terp-partner" domain="[('publicado','=',True)]"/>
                <filter string="Desactivados" name="type_desactivado" icon="terp-partner" domain="[('active','=',False)]"/>

                <separator/>

                <group expand="0" string="Agrupar por...">
                    <filter string="Barrio" context="{'group_by': 'barrio'}"/>
                    <filter string="Cliente" context="{'group_by': 'partner_id'}"/>
                    <filter string="Departamento" context="{'group_by': 'state_id'}"/>
                </group>
            </search>
         </field>
     </record>

    <record id="view_estate_tree" model="ir.ui.view">
        <field name="name">estate.tree</field>
        <field name="model">estate</field>
        <field eval="1" name="priority"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Propiedades">
                <field name="number"/>
                <field name="street"/>
                <field name="numero_de_puerta"/>
                <field name="numero_de_apto"/>
                <field name="edificio"/>
                <field name="barrio"/>
                <field name="cantidadDormitorios"/>
                <field name="precio_cabezal"/>
            </tree>
        </field>
    </record>

    <record id="action_estate_form" model="ir.actions.act_window">
        <field name="name">Propiedades</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_estate_filter"/>
        <field name="filter" eval="True"/>
    </record>

    <record id="action_estate_form_view1" model="ir.actions.act_window.view">
        <field eval="0" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="estate_kanban_view"/>
        <field name="act_window_id" ref="action_estate_form"/>
    </record>
    <record id="action_estate_form_view2" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_estate_form"/>
        <field name="act_window_id" ref="action_estate_form"/>
    </record>
    <record id="action_estate_tree_view1" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_estate_tree"/>
        <field name="act_window_id" ref="action_estate_form"/>
    </record>

    <menuitem id="menu_partner_form" parent="base.menu_sales" action="action_estate_form" sequence="1" groups="group_adm_inm"/>
